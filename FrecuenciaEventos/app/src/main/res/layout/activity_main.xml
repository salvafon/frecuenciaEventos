<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="false">
<LinearLayout
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TableLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchColumns="1"
        android:padding="25dp">
        <TableRow android:padding="5dip">

            <TextView
                android:layout_height="wrap_content"
                android:layout_span="2"
                android:fontFamily="@font/montserrat"
                android:gravity="center_horizontal"
                android:paddingTop="12dp"
                android:paddingBottom="48dp"
                android:text="Frecuencia de Eventos"
                android:textColor="@color/colorBlack"
                android:textSize="20dip" />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_height="wrap_content"
                android:text="Evento"
                android:layout_column="0"
                android:padding="5dp"
                android:textColor="@color/colorWhite"
                android:background="@color/endColor"/>
            <TextView
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:textAlignment="center"
                android:padding="5dp"
                android:text="Contador"
                android:textColor="@color/colorWhite"
                android:background="@color/endColor"/>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_height="wrap_content"
                android:text="onCreate"
                android:layout_column="0"/>
            <TextView
                android:id="@+id/contadorCreate"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:textAlignment="center"
                android:padding="5dp"
                android:text="0"/>
        </TableRow>
        <TableRow android:layout_marginTop="10dp">
            <TextView
                android:layout_height="wrap_content"
                android:text="onPause"
                android:layout_column="0"/>
            <TextView
                android:id="@+id/contadorPause"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:textAlignment="center"
                android:padding="5dp"
                android:text="0"/>
        </TableRow>
        <TableRow android:layout_marginTop="10dp">
            <TextView
                android:layout_height="wrap_content"
                android:text="OnResume" />
            <TextView
                android:id="@+id/contadorResume"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:textAlignment="center"
                android:padding="5dp"
                android:text="0"/>
        </TableRow>
        <TableRow android:layout_marginTop="10dp">
            <TextView
                android:layout_height="wrap_content"
                android:text="OnStop" />
            <TextView
                android:id="@+id/contadorStop"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:textAlignment="center"
                android:padding="5dp"
                android:text="0"/>
        </TableRow>
        <TableRow android:layout_marginTop="10dp">
            <TextView
                android:layout_height="wrap_content"
                android:text="OnActionDown (al tocar)" />
            <TextView
                android:id="@+id/contadorActionDown"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:textAlignment="center"
                android:padding="5dp"
                android:text="0"/>
        </TableRow>
        <TableRow android:layout_marginTop="10dp">
            <TextView
                android:layout_height="wrap_content"
                android:text="OnActionUp (al soltar)" />
            <TextView
                android:id="@+id/contadorActionUp"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:textAlignment="center"
                android:padding="5dp"
                android:text="0"/>
        </TableRow>
        <TableRow android:layout_marginTop="10dp">
            <TextView
                android:layout_height="wrap_content"
                android:text="OnActionMove (toca y mueve)" />
            <TextView
                android:id="@+id/contadorActionMove"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:textAlignment="center"
                android:padding="5dp"
                android:text="0"/>
        </TableRow>
        <TableRow android:layout_marginTop="10dp">
            <TextView
                android:layout_height="wrap_content"
                android:text="onBackPressed" />
            <TextView
                android:id="@+id/contadorBackPressed"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:textAlignment="center"
                android:padding="5dp"
                android:text="0"/>
        </TableRow>
        <TableRow android:layout_marginTop="10dp">
            <Button
                android:id="@+id/add_button"
                android:text="Tap Button"
                android:layout_height="wrap_content"
                android:onClick="onClick"/>
            <TextView
                android:id="@+id/contadorTap"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:textAlignment="center"
                android:padding="5dp"
                android:text="0"/>
        </TableRow>
    </TableLayout>
</LinearLayout>
</ScrollView>